@model IEnumerable<Asp.NetCoreMVCWithEF.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h4>Employees</h4>
<hr />
<p>
    <a asp-action="AddOrUpdate">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OfficeLocation)
            </td>
            <td>
                <a asp-action="AddOrUpdate" asp-route-id="@item.EmployeeId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeeId" onclick="return confirm('Are you sure to delete this record?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
